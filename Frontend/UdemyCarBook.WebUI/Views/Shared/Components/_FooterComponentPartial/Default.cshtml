@model List<ResultFooterAddressDto>

<footer class="ftco-footer ftco-bg-dark ftco-section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-md">
                <div class="ftco-footer-widget mb-4">
                    <h2 class="ftco-heading-2"><a href="#" class="logo">Araç<span>Kirala</span></a></h2>
                    <p>Kaliteli hizmet ve mutlu müşteriler...</p>
                    <ul class="ftco-footer-social list-unstyled float-md-left float-lft mt-5">
                        <li class="ftco-animate"><a href="#"><span class="icon-twitter"></span></a></li>
                        <li class="ftco-animate"><a href="#"><span class="icon-facebook"></span></a></li>
                        <li class="ftco-animate"><a href="#"><span class="icon-instagram"></span></a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md">
                <div class="ftco-footer-widget mb-4 ml-md-5">
                    <h2 class="ftco-heading-2">Bilgi</h2>
                    <ul class="list-unstyled">
                        <li><a href="#" class="py-2 d-block">Hakkımızda</a></li>
                        <li><a href="#" class="py-2 d-block">Hizmetler</a></li>
                        <li><a href="#" id="btn1" class="py-2 d-block">Şartlar ve Koşullar</a></li>
                        <li><a href="#" class="py-2 d-block">Fiyat Garantisi</a></li>
                        <li><a href="#" class="py-2 d-block">Gizlilik &amp; </a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md">
                <div class="ftco-footer-widget mb-4">
                    <h2 class="ftco-heading-2">Müşteri Hizmetleri</h2>
                    <ul class="list-unstyled">
                        <li><a href="#" class="py-2 d-block">SSS</a></li>
                        <li><a href="#" class="py-2 d-block">Fiyatlandırma Seçenekleri</a></li>
                        <li><a href="#" class="py-2 d-block">Kiralama Detayları</a></li>
                        <li><a href="#" class="py-2 d-block">Süreç Nasıl İşler?</a></li>
                        <li><a href="#" class="py-2 d-block">Bizimle İletişime Geç</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md">
                <div class="ftco-footer-widget mb-4">
                    <h2 class="ftco-heading-2">Sorunuz mu var?</h2>
                    <div class="block-23 mb-3">
                        @foreach (var item in Model)
                        {
                            <ul>
                                <li><span class="icon icon-map-marker"></span><span class="text">@item.Address</span></li>
                                <li><a href="#"><span class="icon icon-phone"></span><span class="text">@item.Phone</span></a></li>
                                <li><a href="#"><span class="icon icon-envelope"></span><span class="text">@item.Email</span></a></li>
                            </ul>
                        }

                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-center">

                <p>
                    <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                    Copyright &copy;<script>document.write(new Date().getFullYear());</script> Tüm hakları saklıdır.
                    <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                </p>
            </div>
        </div>
    </div>
</footer>

