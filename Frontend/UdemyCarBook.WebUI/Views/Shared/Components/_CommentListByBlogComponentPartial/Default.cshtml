@using UdemyCarBook.DTO.CommentDTOs

@model List<ResultCommentDTO>


<ul class="comment-list">
    @foreach(var item in Model.Where(x => x.IsApproved == true))
    {
        <li class="comment">
            <div class="vcard bio">
                <img src="/carbook-master/images/user.jpg" alt="Image placeholder">
            </div>
            <div class="comment-body">
                <h3>@item.Name</h3>
                <div class="meta">@item.CreatedDate.ToString("dddd MMM yy - HH:mm")</div>
                <p>@item.Description</p>
            </div>
        </li>
    }
   

</ul>