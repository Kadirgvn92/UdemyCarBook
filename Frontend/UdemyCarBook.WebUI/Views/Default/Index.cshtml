@using UdemyCarBook.DTO.LocationDTOs
@{
    ViewData["Title"] = "Index";
    Layout = null;
}

@model ResultLocationDTO

<!DOCTYPE html>
<html lang="en">

@await Component.InvokeAsync("_HeadComponentPartial")

<style>
    .form-box {
        width: 100%;
        height: 30px;
        border: none;
        color: rgba(255, 255, 255, 0.7);
        background-color: var(--bs-primary);
        font-size:12px;
    }

        .form-box option {
            background-color: white;
            color: black;
        }

            .form-box option:hover {
                background-color: var(--bs-primary); /* Bootstrap'in primary rengi */
                color: white;
            }
</style>
<body>

    @await Component.InvokeAsync("_DefaultNavbarComponentPartial")

    @await Component.InvokeAsync("_DefaultCoverUILayoutComponentPartial")

    <section class="ftco-section ftco-no-pt bg-light">
        <div class="container">
            <div class="row no-gutters">
                <div class="col-md-12	featured-top">
                    <div class="row no-gutters">
                        <div class="col-md-4 d-flex align-items-center">
                            <form action="#" class="request-form ftco-animate bg-primary">
                                <h2>Şimdi Aracınızı Kiralayın</h2>

                                <div class="form-group" id="pickup-location-group" style="display:block;">
                                    <label for="pickup-location" class="label">Nereden Alacaksınız ?</label>
                                    @Html.DropDownListFor(x => x.LocationID, (List<SelectListItem>)ViewBag.Location, new { @class = "form-box" })
                                </div>
                                <div class="form-group">
                                    <input type="checkbox" id="dropoff-checkbox">
                                    <label for="dropoff-checkbox" class="text-light">Başka yere bırakmak istiyorum</label>
                                </div>
                                <div class="form-group" id="dropoff-location-group" style="display:none;">
                                    <label for="dropoff-location" class="label">Nereye Bırakacaksınız ?</label>
                                    @Html.DropDownListFor(x => x.LocationID, (List<SelectListItem>)ViewBag.Location, new { @class = "form-control", @id = "dropoff-location" })
                                </div>
                                <div class="d-flex">
                                    <div class="form-group mr-2">
                                        <label for="" class="label">Alış Tarihi</label>
                                        <input type="text" class="form-control" id="book_pick_date" placeholder="Date">
                                    </div>
                                    <div class="form-group ml-2">
                                        <label for="" class="label">İade Tarihi</label>
                                        <input type="text" class="form-control" id="book_off_date" placeholder="Date">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="" class="label">Alış Saati</label>
                                    <input type="text" class="form-control" name="v" id="time_pick" placeholder="Time">
                                </div>

                                <div class="form-group">
                                    <input type="submit" value="Rent A Car Now" class="btn btn-secondary py-3 px-4">
                                </div>
                            </form>
                        </div>
                        <div class="col-md-8 d-flex align-items-center">
                            <div class="services-wrap rounded-right w-100">
                                <h3 class="heading-section mb-4">Araç Kiralamanın En Basit Yolu</h3>
                                <div class="row d-flex mb-4">
                                    <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                        <div class="services w-100 text-center">
                                            <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-route"></span></div>
                                            <div class="text w-100">
                                                <h3 class="heading mb-2">Almak İstediğin Konumu Seçin</h3>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                        <div class="services w-100 text-center">
                                            <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-handshake"></span></div>
                                            <div class="text w-100">
                                                <h3 class="heading mb-2">En İyi Teklifleri Gör</h3>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                        <div class="services w-100 text-center">
                                            <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-rent"></span></div>
                                            <div class="text w-100">
                                                <h3 class="heading mb-2">Güvenceli Kiralama Avantajı</h3>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <p><a href="#" class="btn btn-primary py-3 px-4">Hemen Bir Araç Kirala</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>



    @await Component.InvokeAsync("_DefaultLast5CarsWithBrandsComponentPartial")

    @await Component.InvokeAsync("_AboutUsComponentPartial")

    @await Component.InvokeAsync("_ServiceComponentPartial")

    @await Component.InvokeAsync("_BecomeADriverComponentPartial")

    @await Component.InvokeAsync("_TestimonialComponentPartial")

    @await Component.InvokeAsync("_GetLast3BlogsWithAuthorListComponentPartial")

    @await Component.InvokeAsync("_DefaultStatisticComponentPartial")

    @await Component.InvokeAsync("_FooterComponentPartial")

    @await Component.InvokeAsync("_ScriptComponentPartial")

    <script>
        document.getElementById('dropoff-checkbox').addEventListener('change', function () {
            var dropoffLocationGroup = document.getElementById('dropoff-location-group');

            if (this.checked) {
                dropoffLocationGroup.style.display = 'block';
            } else {
                dropoffLocationGroup.style.display = 'none';
            }
        });

    </script>

</body>
</html>