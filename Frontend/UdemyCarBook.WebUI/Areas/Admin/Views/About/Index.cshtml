
@model List<ResultAboutDTO>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="content-wrapper">
    <div class="content mt-0 p-2">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Sayfa About Alanı</div>
                        </div>
                        <div class="card-body">
                            <div class="card-body p-0">
                                <div class="mailbox-controls">
                                    <div class="card-sub">
                                        About alanını bu sayfada görüntüleyebilir veya güncelleyebilirsiniz.
                                    </div>

                                </div>

                                <table class="table align-items-center table-striped mb-0">
                                    <thead>
                                        <tr>
                                            <th class="text-uppercase text-primary text-sm font-weight-bolder">#</th>
                                            <th class="text-uppercase text-primary text-sm font-weight-bolder ">Başlık</th>
                                            <th class="text-uppercase text-primary text-sm font-weight-bolder ">Açıklama</th>
                                            <th class="text-uppercase text-primary text-sm font-weight-bolder ">Image URL</th>
                                            <th class="text-uppercase text-primary text-sm font-weight-bolder text-center">Sil</th>
                                            <th class="text-uppercase text-primary text-sm font-weight-bolder text-center">Güncelle</th>
                                        </tr>
                                    </thead>
                                    <tbody class="border-top">
                                        @foreach (var item in Model)
                                        {
                                            count++;
                                            <tr>
                                                <td class="align-middle">
                                                    <span class="text-s  mb-0">@count</span>
                                                </td>

                                                <td class="align-middle">
                                                    <span class="text-s  mb-0">@item.Title</span>
                                                </td>
                                                <td class="align-middle">
                                                    <span class="text-s  mb-0">@item.Description</span>
                                                </td>
                                                <td class="align-middle">
                                                    <span class="text-s  mb-0">@item.ImageUrl</span>
                                                </td>
                                                <td width="100px" class="align-middle text-center">
                                                    <a href="/Admin/About/Delete/@item.AboutID" class="btn bg-gradient-warning ">Sil</a>
                                                </td>
                                                <td width="100px" class="align-middle text-center">
                                                    <a href="/Admin/About/Update/@item.AboutID" class="btn bg-gradient-info ">Güncelle</a>
                                                </td>

                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
