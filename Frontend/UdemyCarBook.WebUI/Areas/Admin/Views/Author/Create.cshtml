@using UdemyCarBook.DTO.AuthorDTOs

@model CreateAuthorDTO

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="content">
        <div class="container-fluid p-2">
            <div class="card h-100">
                <div class="card-header p-3">
                    <div class="row">
                        <div class="col-md-8 d-flex align-items-center">
                            <h6 class="mb-0 text-dark">Yazar Ekleme Ekranı</h6>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="white_shd full margin_bottom_30">
                            <div class="table_section padding_infor_info">
                                <div class="table-responsive-sm m-2">
                                    <!-- table section -->
                                    <form method="post" enctype="multipart/form-data">

                                        <div class="form-group p-1">
                                            <label>Yazar Adı</label>
                                            <input type="text" class="form-control form-control-s" asp-for="Name" placeholder="Yazar Adı Soyadı girin">
                                        </div>
                                        <div class="form-group p-1">
                                            <label>Yazar Açıklaması</label>
                                            <input type="text" class="form-control form-control-s" asp-for="Description" placeholder="Yazar açıklaması girin">
                                        </div>
                                        <div class="form-group p-1">
                                            <label>Yazar Resmi</label>
                                            <input type="text" class="form-control form-control-s" asp-for="ImageUrl" placeholder="Yazar resmini girin">
                                        </div>
                                        <div class="form-group p-1">
                                            <button type="submit" class="btn btn-primary">Yazar Oluştur</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


